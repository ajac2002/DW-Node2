<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container my-5">
    <h1 class="text-center mb-4"><%= title %></h1>

    <form method="GET" action="/fotos/findAll/view" class="mb-4">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="input-group">
            <input type="number" name="id" class="form-control" placeholder="Buscar por ID" required>
            <button class="btn btn-primary" type="submit">Buscar</button>
          </div>
        </div>
      </div>
    </form>

    <table class="table table-hover table-bordered align-middle text-center">
      <thead class="table-primary">
        <tr>
          <th>ID</th>
          <th>Título</th>
          <th>Descripción</th>
          <th>Calificación</th>
          <th>Imagen</th>
          <th>Etiquetas</th>
        </tr>
      </thead>
      <tbody>
        <% arrFotos.forEach(foto => { %>
          <tr>
            <td><%= foto.id %></td>
            <td><%= foto.titulo %></td>
            <td><%= foto.description %></td>
            <td><%= foto.calification %></td>
            <td><img src="/images/<%= foto.ruta.replace(/^public\/images\//, '') %>" width="100"></td>
            <td>
              <% if (foto.etiqueta && foto.etiqueta.length) { %>
                <ul class="list-unstyled mb-0">
                  <% foto.etiqueta.forEach(etiqueta => { %>
                    <li><%= etiqueta.texto %></li>
                  <% }) %>
                </ul>
              <% } else { %>
                <em>Sin etiquetas</em>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
